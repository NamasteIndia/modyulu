<%
    var post = (post) ? post : {};
    var homeUrl = (page.curLang.ismain) ? domain : `${domain}/${page.curLang.id}`;
    var apk = (post.apk) ? post.apk : {};
    var noimage = `${domain}/assets/image/no-image.jpg`;
    var thumb = (post.thumb) ? post.thumb : {};
    var thumbnail = (thumb.url) ? thumb.url : noimage;
    //var modifiedAt = (post.modifiedat) ? functions.formart_timestamp_text(post.modifiedat) : "";
    //var modifiedAtSeo = (post.modifiedat) ? functions.formart_datetime(post.modifiedat, 'seo') : "";
    var permalink = `${homeUrl}/${post.slug}.html`;
    var title = post.title;
    var modFeature = (apk.mod_text) ? `Mod: ${apk.mod_text}` : __("textNoMod");
    var apkVersion = (apk.version) ? apk.version : __("textUnknow");
%>
<a class="apk-image" href="<%=permalink%>" title="<%=title%>">
    <figure>
        <img class="img-lazy" data-src="<%=thumbnail%>" src="<%=noimage%>" alt="<%=title%>">
    </figure>
    <div class="info">
        <div class="title truncate"><%=title%></div>
        <div class="version truncate">
            <svg xmlns="http://www.w3.org/2000/svg" width="16.742" height="14.051" viewBox="0 0 16.742 14.051">
