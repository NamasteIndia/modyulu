                <path d="M97.383,101.412l-1.4,1.667a4.854,4.854,0,0,0-8.133,3.578c0,.131.005.261.016.386h1.17a.322.322,0,0,1,.246.528l-.969,1.158-1.477,1.765-.084-.1-2.363-2.824a.322.322,0,0,1,.246-.527h1.052q-.01-.191-.01-.386a7.026,7.026,0,0,1,11.7-5.244Z" transform="translate(-84.319 -99.633)" fill="#fff"/>
            </svg>              
            <%=apkVersion%> - <%=modFeature%>
        </div>
    </div>
</a>