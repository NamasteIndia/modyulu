<%
    var page = (typeof page !== "undefined") ? page : {};
    var pageContent = (page.pageContent) ? page.pageContent : {};
%>
<%- include("includes/header"); %>
<main id="page-body">
    <div class="container">
        <%- page.breadcrumbs.html %>
        <article class="page-single mb-50">
            <div class="page-description">
                <h1 class="page-title text-center"><%=pageContent.title%></h1>
            </div>
            <div class="wrapcontent box-space">
                <%-pageContent.content%>
            </div>
            <div class="form-feedback-holder">
                <form class="form-style form-feedback mb-3" action="<%=domain%>/feedback/add">
                    <div class="form-group">
                        <label for="name"><%=__('textNickname')%> <span class="required">(*)</span></label>
                        <input type="hidden" name="token" value="<%=(session.ajaxpagetoken)?session.ajaxpagetoken:'';%>">
                        <input class="form-control" id="name" name="name" type="text" size="30" maxlength="245" required="required">
                    </div>
                    <div class="form-group">
                        <label for="email"><%=__('textEmail')%> <span class="required">(*)</span></label>
                        <input class="form-control" id="email" name="email" type="email" size="30" maxlength="245" required="required">
                    </div>
                    <div class="form-group">
                        <label for="link"><%=__('textErrorUrl')%> <span class="required">(*)</span></label>
                        <input class="form-control" id="link" name="link" value="https://" type="url" size="30" maxlength="245" required="required">
                    </div>
                    <div class="form-group">
                        <label for="subject"><%=__('textSubject')%> <span class="required">(*)</span></label>
                        <input class="form-control" id="subject" name="subject" type="text" size="30" maxlength="245" required="required">
                    </div>
                    <div class="form-group">
                        <label for="content"><%=__('textYourMessage')%> <span class="required">(*)</span></label>
                        <textarea class="form-control" id="content" name="content" cols="45" rows="8" maxlength="65525" required="required"></textarea>
                    </div>
                    <div class="form-group text-right">
                        <input class="btn btn-submit" name="submit" type="submit" id="submit" class="submit" value="<%=__('textSend')%>">
                    </div>
                    <div class="form-message"></div>
                </form>
            </div>
        </article>
    </div>
</main>
<%- include("includes/footer"); %>