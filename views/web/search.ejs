<%
    var page = (typeof page !== "undefined") ? page : {};
    var pageContent = (page.pageContent) ? page.pageContent : {};
    var apks = page.postSearch.rows || [];
    var maxPage = page.postSearch.maxPage;
%>
<%- include("includes/header"); %>
<main id="page-body">
    <div class="container">
        <div class="py-2">
            <div id="breadcrumb" class="breadcumb">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><span><%=pageContent.title%></span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container mr-top-3">
        
        <section class="bg-white border shadow-sm pt-3 mb-3">
        <h1 class="page-title text-center mb-20"><%=pageContent.title%></h1>
        <%
            if(apks.length > 0){
        %>
        
                <div class="row">
                    <%- include("includes/list-search", {posts: apks}); %>
                </div>
                <div>
                    <ul class="pagination">
                        <%-page.pagination%>
                    </ul>
                </div>
        
        <%
            }else{
        %>
                <p class="mb-50"><%=__('msgEmptySearch')%></p>
        <%
            }
        %>
        </section>
    </div>
</main>
<%- include("includes/footer"); %>