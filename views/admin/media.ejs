<%- include("./include/header") %>
    <!--Main content-->
    <div class="site-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/<%=dashboard%>"><i class="fas fa-home"></i> Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/<%=dashboard%>/media">Media</a></li>
                <li class="breadcrumb-item active" aria-current="page">List Files</li>
            </ol>
        </nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="datatable-search-header">
                                <select id="slBulk">
                                    <option value="">Bulk actions</option>
                                    <option value="delete">Delete</option>
                                </select>
                                <button id="btnBulk" type="button" class="btn btn-primary">Apply</button>
                                <div class="datatable-filter-holder">
                                    <input class="item-filter" type="text" placeholder="Search">
                                    <select class="item-filter">
                                        <option value="%">All dates</option>
                                        <% if(months){%>                                    
                                            <% months.forEach(item => { %>
                                                <option value="<%=item.month%>"><%=item.month%></option>
                                            <% }) %>
                                        <%}%>
                                    </select>
                                    <button type="button" id="btnDTFileter" class="btn btn-primary">Filter</button>
                                </div>
                                <a href="/<%=dashboard%>/media/add" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-cloud-upload-alt"></i> <span>Upload Files</span>
                                </a>
                            </div>
                            <table id="datatable-sside" class="table table-bordered datatable-style" data-type="media">
                                <thead>
                                    <tr>
                                        <th style="max-width: 50px;">
                                            <input type="checkbox" name="select_all" value="1" id="datatable-select-all">
                                        </th>
                                        <th>Name</th>
                                        <th>Author</th>
                                        <th>Title</th>
                                        <th>Caption</th>
                                        <th>Size</th>
                                        <th class="text-right" style="max-width: 120px;"><i class="fas fa-clock" title="Uploaded at"></i></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Model Edit -->
    <div class="modal fade" id="frmModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit File</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
                </div>
                <div class="modal-body">
                    <div class="error-modal-edit"></div>
                    <form action="/<%=dashboard%>/media/edit" method="POST">
                        <input type="hidden" name="id" id="id" autocomplete="off" required>
                        <div class="form-group">
                            <label for="title" class="col-form-label">Title</label>
                            <input class="form-control" type="text" name="title" id="title" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="furl" class="col-form-label">Url</label>
                            <input class="form-control" type="text" name="url" id="url" placeholder="Url" disabled>
                        </div>
                        <div class="form-group">
                            <label for="note" class="col-form-label">Alt</label>
                            <textarea class="form-control" name="note" id="note" placeholder="Alt"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-form-label">Caption</label>
                            <textarea class="form-control" name="description" id="description" placeholder="Caption"></textarea>
                        </div>
                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-primary">Apply</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- <script src="/<%=dashboard%>/assets/libs/dropzone-5.7.0/dropzone.js" charset="utf-8"></script> -->
    <script src="/<%=dashboard%>/assets/datatables/datatable.media.js" charset="utf-8"></script>
    <script src="/<%=dashboard%>/assets/datatables/datatable.all.js" charset="utf-8"></script>
    <%- include("./include/footer") %>